<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onPageLoad" navigatingTo="navigatingTo" class="page" actionBarHidden="true" xmlns:x="nativescript-statusbar">
  <x:StatusBar ios:barStyle="light" barColor="#222222" />

  <StackLayout backgroundColor>
    <GridLayout rows="*" columns="*">
      <GridLayout row="0" col="0" rows="*" columns="*" id="launch-screen">

      </GridLayout>

      <WebView row="0" col="0" src="{{ src }}" loaded="onWebViewLoaded" id="main-web-view" visibility="{{ webPageLoaded ? 'visible' : 'collapsed' }}" />
    </GridLayout>
  </StackLayout>
</Page>
